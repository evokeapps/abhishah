---
import about from "../../contents/about.yaml";
import Skill from "./Skill.astro";
---

<section class="container px-4 py-16 mx-auto space-y-16">
    <h2 class="text-2xl md:text-4xl text-secondary font-bold text-center">
        {about.skills_title}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5">
        {
            about.skills.map((item: any) => {
                return (
                    <Skill
                        title={item.title}
                        description={item.description}
                        key={item.title}
                        image={item.image}
                    />
                );
            })
        }
    </div>
</section>
