---
import about from "../../contents/about.yaml";
import Skill from "./Skill.astro";
---

<section
    id="about"
    class="container gap-4 px-4 text-base-100 py-16 mt-32 md:mt-16 mx-auto flex flex-col items-center justify-center"
>
    <div class="max-w-2xl mb-8 space-y-16">
        <h2 class="text-2xl md:text-4xl text-secondary font-bold text-center">
            {about.about_title}
        </h2>
        <p class="mb-8 text-md md:text-lg text-center whitespace-pre-wrap">
            {about.about_description}
        </p>
    </div>
</section>
